{% extends 'master.twig' %}
{% block header %}
    Add
{% endblock header %}
{% block content %}
    <script src="/bower_components/cryptojslib/components/core-min.js"></script>
    <script src="/bower_components/cryptojslib/components/x64-core-min.js"></script>
    <script src="/bower_components/cryptojslib/components/sha512-min.js"></script>
    <script src="/bower_components/cryptojslib/components/hmac-min.js"></script>
    <script src="/bower_components/q/q.js"></script>
    <script src="/bower_components/handjs/hand.js"></script>
    <script src="/bower_components/myscript/dist/myscript.min.js"></script>
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ siteUrl('/') }}">Home</a></li>
            <li class="active">Add Employee</li>
        </ol>
    </div>
    <div class="col-md-12">
        {% if flash.success is not empty %}
            <div class="alert alert-success" role="alert">{{ flash.success }}</div>
        {% endif %}
        {% if flash.errors is not empty %}
            <div class="alert alert-danger" role="alert">
                Failed.<br/>
                <ul>
                    {% for error in flash.errors %}
                        {% for msg in error %}
                            <li>{{ msg }}</li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
    <div class="col-md-12">
        <form method="post" class="form-horizontal" action="{{ siteUrl('/add') }}">
            <fieldset>
                <div class="form-group">
                    <label class="col-md-1 control-label">Name</label>

                    <div class="col-md-4">
                        <canvas id="canvas1" width="400" height="120" style="background-color: lightyellow;"></canvas>
                        <br/>
                        <input id="result1" name="name" type="text" class="form-control" readonly="true">
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-md-1 control-label" for="age">Age</label>

                    <div class="col-md-4">
                        <canvas id="canvas2" width="400" height="120" style="background-color: lightyellow;"></canvas>
                        <br/>
                        <input id="result2" name="age" type="text" class="form-control" readonly="true">
                    </div>
                </div>
                <br/>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            </fieldset>
        </form>


    </div>
    <script src="/assets/js/config.js"></script>
    <script src="/assets/js/app.js"></script>
{% endblock content %}